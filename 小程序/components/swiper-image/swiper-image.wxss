.swiper-image {
  width: 100%;
  height: 100%;
  background-size: cover;
}
.swiper-container {
  position: relative;
}

.swiper-container .swiper-indicator-dots {
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 0;
  text-align: center;
}

.swiper-container .swiper-indicator-dot {
  display: inline-block;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  margin: 0 4px;
}

.swiper-container .swiper-indicator-dot-active {
  background-color: #333;
}

